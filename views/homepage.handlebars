
<!-- Navbar -->
<div class="container containerNav mt-4">
    <nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <!-- when click on a <a> tag it refreshes the page and stops that-->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mx-auto">
        
        <li class="list active">
          <a class="nav-link" href="/" id="yourListBtn">Your list</a>
        </li>

        <li class="list">
          <a class="nav-link" href="/addList" id="newListBtn">New list</a>
        </li>
      </ul>
    </div>
    </nav>
</div>
    
{{#if lists.length}}
  <div class="col-md-12 list-list">
  <div class="container mainCon mt-5 hideCons" id="yourList">
    {{#each lists as |list|}}

    <div class="row listItem">
        <div class="col-8"><h4><a href="/list/{{list.id}}">{{list.name}}</a></h4></div> <!--List Name-->
        <div class="col-4 text-right"><a href="/list/{{list.id}}" class="viewBtn btn btn-success">View</a>
        <button class="btn btn-danger" data-id="{{list.id}}">DELETE</button>        
        </div>
    </div>


    {{/each}}
  </div>
  </div>
  {{/if}}

  

<script src="./js/homepage.js"></script>